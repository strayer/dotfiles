{
{{- if and (eq .claude_code_provider "vertex") (eq .claude_code_vertex_auth_method "litellm") }}
  "apiKeyHelper": "~/.bin/get-claude-code-api-key",
{{- end }}
  "env": {
    "DISABLE_TELEMETRY": "1",
    "DISABLE_BUG_COMMAND": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_PROMPT_CACHING": "0",
    "DISABLE_AUTOUPDATER": "1"{{- if eq .claude_code_provider "bedrock" }},
    "CLAUDE_CODE_USE_BEDROCK": "1",
    "AWS_REGION": "eu-central-1",
    "ANTHROPIC_SMALL_FAST_MODEL_AWS_REGION": "us-east-1",
    "AWS_PROFILE": "{{ .claude_code_bedrock_profile }}",
    "ANTHROPIC_DEFAULT_SONNET_MODEL": "eu.anthropic.claude-sonnet-4-5-20250929-v1:0"{{- else if eq .claude_code_provider "vertex" }},
    "CLOUD_ML_REGION": "global",
    "VERTEX_REGION_CLAUDE_4_0_SONNET": "europe-west1",
    "ANTHROPIC_VERTEX_PROJECT_ID": "{{ .claude_code_vertex_project_id }}",
    "CLAUDE_CODE_USE_VERTEX": "1"{{- if eq .claude_code_vertex_auth_method "litellm" }},
    "ANTHROPIC_VERTEX_BASE_URL": "{{ .claude_code_vertex_base_url }}",
    "CLAUDE_CODE_SKIP_VERTEX_AUTH": "1"{{- end }}{{- end }}
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(npx lint-staged:*)",
      "Bash(npx prettier:*)",
      "Bash(terraform fmt:*)",
      "Bash(terraform validate:*)",
      "Bash(tflint:*)",
      "Bash(markdownlint:*)",
      "Bash(shellcheck:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(git add:*)",
      "Bash(brew info:*)",
      "Bash(brew search:*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "python3 ~/.claude/pyccsl.py --env ~/.claude/pyccsl.env"
  }
}
